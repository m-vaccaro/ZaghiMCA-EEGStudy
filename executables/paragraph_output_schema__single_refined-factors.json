{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "text": {
      "type": "string"
    },

    "genre": {
      "enum": ["narrative", "expository"]
    },

    "difficulty": {
      "enum": ["low", "medium", "high"]
    },

    "coherence_predictability": {
      "enum": [
        "high_coherence_high_predictability",
        "high_coherence_low_predictability",
        "low_coherence"
      ]
    },

    "emotional_valence": {
      "enum": ["negative", "neutral", "positive"]
    },

    "concreteness": {
      "enum": ["abstract", "mixed", "concrete"]
    },

    "tone": {
      "enum": ["plain", "technical", "reflective"]
    },

    "topic_hint": {
      "enum": [
        "life_sciences",
        "physical_sciences",
        "engineering",
        "computing"
      ]
    }
  },

  "required": [
    "text",
    "genre",
    "difficulty",
    "coherence_predictability",
    "emotional_valence",
    "concreteness",
    "topic_hint",
    "tone"
  ]
}
