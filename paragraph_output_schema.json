{
  "type": "object",
  "properties": {
    "domain": {"enum": ["life_sciences","physical_sciences","engineering","computing","humanities","social_sciences","everyday_scenarios","nature_travel","arts_culture"]},
    "mode": {"enum": ["narrative","expository","descriptive","process_explanation","persuasive"]},
    "tone": {"enum": ["plain","formal","technical","playful","reflective","conversational"]},
    "reading_level": {"enum": ["Grade8","Grade12","Undergraduate","Graduate"]},
    "style": {
      "type": "object",
      "properties": {
        "sentence_length":{"enum":["short","mixed","long"]},
        "figurative_language":{"enum":["none","low","medium","high"]},
        "concreteness":{"enum":["abstract","mixed","concrete"]},
        "viewpoint":{"enum":["1st","2nd","3rd"]},
        "temporal_focus":{"enum":["past","present","future"]}
      },
      "required":["sentence_length","figurative_language","concreteness","viewpoint","temporal_focus"],
      "additionalProperties": false
    },
    "title": {"type":"string"},
    "paragraph": {"type":"string", "minLength": 600, "maxLength": 1100}
  },
  "required": ["domain","mode","tone","reading_level","style","title","paragraph"],
  "additionalProperties": false
}